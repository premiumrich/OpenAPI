=begin
{{> api_info}}
=end

$:.push File.expand_path("../lib/", __FILE__)
require "{{gemName}}/version"

Gem::Specification.new do |spec|
  spec.name = "{{gemName}}"
  spec.version = {{moduleName}}::VERSION
  spec.platform = Gem::Platform::RUBY
  spec.authors = ["Trulioo"]
  spec.email = ["support@trulioo.com"]
  spec.homepage = "https://github.com/Trulioo/sdk-ruby"
  spec.summary = "{{gemSummary}}"
  spec.license = "{{gemLicense}}"

  spec.files = Dir["README.md", "docs/**/*", "lib/**/*"]
  spec.executables = []
  spec.require_paths = ["lib/"]

  spec.required_ruby_version = ">= 2.4"

  {{#isFaraday}}
  spec.add_runtime_dependency "faraday", "~> 1.0", ">= 1.0.1"
  {{/isFaraday}}
  {{^isFaraday}}
  spec.add_runtime_dependency "typhoeus", "~> 1.0", ">= 1.0.1"
  {{/isFaraday}}

  spec.add_development_dependency "rake", "~> 13.0"
  spec.add_development_dependency "rspec", "~> 3.6"
  spec.add_development_dependency "rspec_junit_formatter", "~> 0.4"
  spec.add_development_dependency "simplecov", "~> 0.21"
  spec.add_development_dependency "webmock", "~> 3.12"
end
